<div class="col-md-8 offset-md-1">
    <h2>User Info</h2>
        <%= image_tag user.get_profile_image(100,100) %>
                
  <table class="table">
      <tr>
          <th>name</th>
          <th><%= user.name %></th>
      </tr>
      <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
      </tr>
  </table>

    <div>
        
        <%= link_to edit_user_path(user.id) do %>
        <i class="btn btn-outline-secondary btn-block"><i class="fas fa-user-cog fa-w-20"></i></i>
        
    
            <% end %>
        
    </div>
      
</div>
            
            